        <activity
            android:name=".MapActivity"
            android:exported="false" />
        <activity
            android:name=".ActivityAddMarker"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="false">
        </activity>
    </application>

</manifest>